<h1>Listing dishes</h1>

<table>
  <thead>
    <tr>
      <th>Description</th>
      <th>Dishes type</th>
      <th>Local</th>
      <th>Order status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @dishes.each do |dish| %>
      <tr>
        <td><%= dish.description %></td>
        <td><%= dish.dishes_type %></td>
        <td><%= dish.local %></td>
        <td><%= dish.order_status %></td>
        <td><%= link_to 'Show', dish %></td>
        <td><%= link_to 'Edit', edit_dish_path(dish) %></td>
        <td><%= link_to 'Destroy', dish, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

