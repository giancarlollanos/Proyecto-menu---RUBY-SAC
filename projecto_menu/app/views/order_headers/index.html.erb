<h1>Listing order_headers</h1>

<table>
  <thead>
    <tr>
      <th>Date order</th>
      <th>Date canceled</th>
      <th>Observations</th>
      <th>Amount</th>
      <th>Datos customer</th>
      <th>Address customer</th>
      <th>Phone customer</th>
      <th>Local</th>
      <th>Order status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @order_headers.each do |order_header| %>
      <tr>
        <td><%= order_header.date_order %></td>
        <td><%= order_header.date_canceled %></td>
        <td><%= order_header.observations %></td>
        <td><%= order_header.amount %></td>
        <td><%= order_header.datos_customer %></td>
        <td><%= order_header.address_customer %></td>
        <td><%= order_header.phone_customer %></td>
        <td><%= order_header.local %></td>
        <td><%= order_header.order_status %></td>
        <td><%= link_to 'Show', order_header %></td>
        <td><%= link_to 'Edit', edit_order_header_path(order_header) %></td>
        <td><%= link_to 'Destroy', order_header, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

