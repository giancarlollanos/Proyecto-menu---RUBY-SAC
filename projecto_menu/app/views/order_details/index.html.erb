<h1>Listing order_details</h1>

<table>
  <thead>
    <tr>
      <th>Cant dishes</th>
      <th>Parcial price</th>
      <th>Orders headers</th>
      <th>Dishes</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @order_details.each do |order_detail| %>
      <tr>
        <td><%= order_detail.cant_dishes %></td>
        <td><%= order_detail.parcial_price %></td>
        <td><%= order_detail.orders_headers %></td>
        <td><%= order_detail.dishes %></td>
        <td><%= link_to 'Show', order_detail %></td>
        <td><%= link_to 'Edit', edit_order_detail_path(order_detail) %></td>
        <td><%= link_to 'Destroy', order_detail, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

