<h2>Registrarse</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
<%= f.error_notification %>



  <div class="form-horizontal">
   
    <%= f.input :name, required: true, placeholder:'Nombres', title:'Ingresa tus nombres completos',input_html: { class: 'form-control' } %>
    <%= f.input :last_name, required: true, autofocus: true, placeholder:'Apellidos' %>
    <%= f.input :dni, required: true, autofocus: true, input_html: { maxlength: 8, width: 50 } %>
    <%= f.input :email, required: true, autofocus: true %>
    <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
    <%= f.input :password_confirmation, required: true %>
    <%= f.input :address, required: true, autofocus: true %>
    <%= f.input :phone, required: true, autofocus: true %>
    <%= f.input :telephone, required: true, autofocus: true %>
    <%= f.label :date_of_birth, required: true %><br /><%= f.date_select :date_of_birth %><br /><br />
    
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Registrarse" %>
  </div>
<% end %>

<%= render "users/shared/links" %>
